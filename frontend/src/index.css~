    --deep-navy-rgb: 17, 45, 78;
}

[data-theme="dark"] {
    --var-icon-hover-color: #F9F7F7;
    --var-icon-primary-color: #112D4E;

    html, body {
        background-color: var(--var-deep-navy);
    }
}

[data-theme="light"] {
    --var-icon-hover-color: #112D4E;
    --var-icon-primary-color: #F9F7F7;

    html, body {
        background-color: var(--var-cultured);
    }
}

/* Apply to entire app */
html, body {
    font-family: inherit; /* Use the font from :root */
    height: 100%;
}

/* Apply to all elements */
* {
    box-sizing: border-box;
    font-family: inherit; /* Makes sure everything inherits from :root */
}

/* Font size classes */
.fs-7 {
    font-size: 0.75em !important; /* Smaller than fs-6 (0.875rem) */
